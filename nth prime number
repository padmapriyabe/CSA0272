#include<stdio.h>
#include<stdlib.h>

void main()
{
    int i,j,n=1000,count=0,nth;
    int a[1000];
    int x=0;
    printf("************************ nth PRIME NUMBER GENERATOR ************************\n");
    printf("This program will find the nth prime number ranging between 1<n<1000.\n\t\t\t Enter the value of n: ");
    scanf("%d",&nth);
    if(nth>1000)
    {
        printf("xxxxxxxxxxxxxxxxxx  Invalid entry.Enter value between 2-1000  xxxxxxxxxxxxxxxxxx");
        exit(0);
    }
    else
    {
        printf("\n\t\t*************** LOADING ->->->->->->->->->->->->->->->->->->\n");
        for(i=2;i<=n;i++)
        {
            int c=0;
            for(j=1;j<=i/2;j++)
            {
                if(i%j==0)
                {
                    c++;
                }
            }

               if(c==1)
                {
                    a[x]=i;
                    x++;
                    if(x==nth)
                    break;
                }

        }
        printf("\t\t\tThe %dth prime number is: %d",nth,a[nth-1]);
    }
}
