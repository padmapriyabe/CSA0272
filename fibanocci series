#include <stdio.h>

int main()
{
    int previous,current,next,count[10],test_cases,arr[10],i;

    scanf(“%d”,&test_cases);
    for(i=0; i<test_cases; i++)
        scanf(“%d”,&arr[i]);
    for(i=0; i<test_cases; i++)
    {
        count[i]=0;
        previous=0;
        current=1;
        next=1;
        while( next < arr[i] )
        {
		  if( next % 2 == 0)
                count[i] += next;
            next = current + previous;
            previous = current;
            current = next;
        }
    }
    for(i=0; i<test_cases; i++)
        printf(“%d\n”,count[i]);
    return 0;
}    
